generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id Int @id @default(autoincrement())
  username String @unique
  password String @default("password")
  join_date DateTime @db.Date @default(now())
  items Inventory[]
}

model Inventory {
  id Int @id @default(autoincrement())
  name String
  owner Account @relation(fields: [ownerId], references: [id])
  ownerId Int
  substats ItemSubstats[]
}

model ItemSubstats {
  id Int @id @default(autoincrement())
  value Float

  item Inventory @relation(fields: [item_id], references: [id])
  item_id Int @unique

  substatType SubstatTypes @relation(fields: [substatType_name], references: [name])
  substatType_name String @unique
}

model SubstatTypes {
  id Int @id @default(autoincrement())
  name String @unique
  itemSubstat ItemSubstats?
}