generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id Int @id @default(autoincrement())
  username String @unique
  password String 
  currency Int @default(100)
  join_date DateTime @db.Date @default(now())
  last_box_open DateTime? @db.Timestamp(0)
  items Inventory[]
  characters Character[]
}

model Inventory {
  id Int @id @default(autoincrement())
  exp Int @default(0)
  name ItemName? @relation(fields: [itemNameId], references: [id])
  itemNameId Int?

  owner Account? @relation(fields: [ownerId], references: [id])
  ownerId Int?

  substats ItemSubstats[]

  character Character? @relation(fields: [characterId], references: [id])
  characterId Int?
}

model ItemName {
  id Int @id @default(autoincrement())
  name String @unique
  item Inventory[]
}

model ItemSubstats {
  id Int @id @default(autoincrement())
  value Float

  item Inventory? @relation(fields: [item_id], references: [id])
  item_id Int?

  substatType SubstatTypes? @relation(fields: [substatTypeId], references: [id])
  substatTypeId Int?

  @@unique([item_id, substatTypeId])
}

model SubstatTypes {
  id Int @id @default(autoincrement())
  name String @unique
  itemSubstats ItemSubstats[]
}

model Character {
  id Int @id @default(autoincrement())
  characterName String?
  processedName String?
  owner Account? @relation(fields: [ownerId], references: [id])
  ownerId Int?

  equipment Inventory[]
}