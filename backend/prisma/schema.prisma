generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id Int @id @default(autoincrement())
  username String @unique
  password String @default("password")
  currency Int @default(100)
  join_date DateTime @db.Date @default(now())
  items Inventory[]
}

model Inventory {
  id Int @id @default(autoincrement())
  level Int @default(0)
  name ItemName @relation(fields: [itemNameId], references: [id])
  itemNameId Int

  owner Account @relation(fields: [ownerId], references: [id])
  ownerId Int

  substats ItemSubstats[]
}

model ItemName {
  id Int @id @default(autoincrement())
  name String
  item Inventory[]
}

model ItemSubstats {
  id Int @id @default(autoincrement())
  value Float

  item Inventory @relation(fields: [item_id], references: [id])
  item_id Int

  substatType SubstatTypes @relation(fields: [substatType_name], references: [name])
  substatType_name String

  @@unique([item_id, substatType_name])
}

model SubstatTypes {
  id Int @id @default(autoincrement())
  name String @unique
  itemSubstats ItemSubstats[]
}